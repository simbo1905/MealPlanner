{
  "name": "mealplanner-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "MealPlanner monorepo with shared TypeScript modules for web, iOS, and Android",
  "engines": {
    "node": ">=22.11.0",
    "pnpm": ">=9.12.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' run build && pnpm --filter @mealplanner/web run build",
    "build:web": "pnpm --filter @mealplanner/web run build",
    "build:packages": "pnpm -r --filter './packages/*' run build",
    "test:e2e": "playwright test -c apps/web/playwright.config.ts",
    "clean": "pnpm -r run clean",
    "clean:web": "pnpm --filter @mealplanner/web run clean",
    "dev": "pnpm -r --parallel --filter './packages/*' run dev & pnpm --filter @mealplanner/web run dev",
    "dev:web": "pnpm --filter @mealplanner/web run dev",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json,svelte}\" --cache",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json,svelte}\" --cache",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint -- --fix",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "test:web": "pnpm --filter @mealplanner/web run test",
    "ios": "cd apps/ios && xcodebuild -scheme MealPlanner -configuration Debug build",
    "android": "echo 'Android build not configured yet'"
  },
  "devDependencies": {
    "@mealplanner/prettier-config": "workspace:*",
    "@mealplanner/typescript-config": "workspace:*",
    "@playwright/test": "^1.49.1",
    "playwright": "^1.56.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "typescript": "^5.6.3"
  },
  "prettier": "@mealplanner/prettier-config",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
