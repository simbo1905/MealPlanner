{
  "name": "@mealplanner/recipe-types",
  "version": "0.1.0",
  "private": false,
  "description": "JDT RFC 8927 compliant TypeScript type definitions for MealPlanner recipes",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist node_modules",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@mealplanner/eslint-config": "workspace:*",
    "@mealplanner/typescript-config": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
